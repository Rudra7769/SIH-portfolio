# Firebase Configuration
# Copy this file to .env and fill in your actual Firebase project values

# Firebase Project Configuration
VITE_FIREBASE_API_KEY=your_api_key_here
VITE_FIREBASE_AUTH_DOMAIN=your_project_id.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=your_project_id
VITE_FIREBASE_STORAGE_BUCKET=your_project_id.appspot.com
VITE_FIREBASE_MESSAGING_SENDER_ID=your_sender_id_here
VITE_FIREBASE_APP_ID=your_app_id_here

# Firebase Hosting Configuration (Optional - for advanced hosting features)
VITE_FIREBASE_HOSTING_SITE=your_hosting_site_name

# Firebase Analytics (Optional)
VITE_FIREBASE_MEASUREMENT_ID=G-XXXXXXXXXX

# Firebase Emulator Configuration (Development Only)
# Uncomment and set these for local development with Firebase emulators
# VITE_FIREBASE_USE_EMULATOR=true
# VITE_FIREBASE_AUTH_EMULATOR_HOST=localhost:9099
# VITE_FIREBASE_FIRESTORE_EMULATOR_HOST=localhost:8080
# VITE_FIREBASE_STORAGE_EMULATOR_HOST=localhost:9199

# Additional Configuration (Optional)
VITE_APP_NAME=Your App Name
VITE_APP_VERSION=1.0.0
VITE_APP_ENVIRONMENT=development

# Security Rules (Optional - for development)
# VITE_FIREBASE_DISABLE_SECURITY_RULES=false

# Performance Monitoring (Optional)
VITE_FIREBASE_PERFORMANCE_COLLECTION_ENABLED=true

# Crashlytics (Optional)
VITE_FIREBASE_CRASHLYTICS_COLLECTION_ENABLED=true

# Remote Config (Optional)
VITE_FIREBASE_REMOTE_CONFIG_COLLECTION_ENABLED=true
